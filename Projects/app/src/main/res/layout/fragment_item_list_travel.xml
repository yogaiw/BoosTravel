<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp"
            app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20px">

                        <!-- <ImageView
                            android:id="@+id/logoTravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sinarjaya"
                            /> -->
                        <TextView
                            android:id="@+id/namaTravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Nama Travel"
                            android:fontFamily="@font/bold"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            />
                        <TextView
                            android:id="@+id/totalJalan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="5h 30m"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/estimasiRute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="00.00 -00.00"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/rutePerjalanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Bandung - Purwokerto"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/line"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtHarga"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginBottom="23dp"
                                    android:layout_centerVertical="true"
                                    android:text="Rp. 0000"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                                <Button
                                    android:id="@+id/btnPesan"
                                    android:text="PESAN"
                                    android:backgroundTint="@color/main"
                                    android:layout_width="150dp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"
                                    android:layout_height="45dp"
                                    android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>