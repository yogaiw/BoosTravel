<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daftar">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_atas_login"
        />
    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Akun!"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/bold"
            />

        <Button
            android:drawableLeft="@drawable/ic_btn_user"
            android:id="@+id/btnDaftarUser"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Daftar Sebagai User"
            android:backgroundTint="@color/main"
            android:fontFamily="@font/bold"
            />

        <Button
            android:drawableLeft="@drawable/ic_btn_mitra"
            android:id="@+id/btnDaftarMitra"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Daftar Sebagai Mitra"
            android:backgroundTint="@color/main"
            android:fontFamily="@font/bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun?"
            android:textAlignment="center"
            android:fontFamily="@font/regular"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:layout_marginLeft="5dp"
            android:text="Login"
            android:textColor="@color/main"
            android:textSize="12sp"
            />
    </LinearLayout>
</RelativeLayout>